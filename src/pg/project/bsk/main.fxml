<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<BorderPane fx:id="mainP" prefWidth="650.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="pg.project.bsk.Controller">
   <top>
      <HBox maxWidth="1000" minWidth="650.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <HBox alignment="CENTER_RIGHT" spacing="7.0">
            <Button fx:id="generateKeysButton" text="Generate keys" disable="true"/> <!--onAction="#nazwaFunckji" -->
            <ComboBox fx:id="chooseCryptType" value="EBC">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="EBC"/>
                     <String fx:value="CBC"/>
                     <String fx:value="OBF"/>
                  </FXCollections>
               </items>
            </ComboBox>
         </HBox>
         <Region prefWidth="20.0" HBox.hgrow="ALWAYS" />
         <Label fx:id="statusLabel" alignment="CENTER" prefWidth="200.0" text="Keys are generated!" HBox.hgrow="ALWAYS">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </Label>
      </HBox>
   </top>
   <center>
      <VBox>
         <padding>
            <Insets  bottom="10.0" left="10.0" right="10.0" />
         </padding>
         <TextArea prefHeight="300.0"/>
         <HBox spacing="7.0">
            <padding>
               <Insets top="10.0" />
            </padding>
            <TextField prefWidth="250.0" />
            <Button fx:id="submitTextMessage" onAction="#submitMessage" text="Submit"/>
            <Region prefWidth="20.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="chooseFile" text="Choose file" />
            <TextField fx:id="filePath" prefWidth="150.0" disable="true"/>
         </HBox>
      </VBox>
   </center>
</BorderPane>
